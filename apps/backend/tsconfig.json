{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@chat-app/shared-types": ["../../../packages/shared-types/src"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../../packages/shared-types" }]
}
